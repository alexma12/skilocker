
<%- include("../partials/header") %>

<div class = "container mt-4">
  <div class = "row">
    <div class = "col-md-3">
      <div class = "lead">
        <form action="/" method="POST" enctype="multipart/form-data">
      </div>
      <li class = "mt-5 list-group-item pt-4 pb-4">
        <input class = "form-control" type ="tel" name = "contactName" placeholder = "contact name ">
      </li>
      <li class = "list-group-item pt-4 pb-4">
        <input class = "form-control" type ="text" name = "phone" placeholder = "contact number">
     </li>
      <li class = "list-group-item pt-4 pb-4">
        <input class = "form-control" type ="text" name = "address" value = "meetup address">
     </li>
     <li class = "list-group-item pt-4 pb-4">
       <input class = "form-control" type ="text" name = "city" placeholder = "city">
    </li>
    <li class = "list-group-item pt-4 pb-4">
      <input class = "form-control" type ="text" name = "province" placeholder = "province/state">
   </li>
    </div>
    <div class = "col-md-9">
      <div class = "card">
        <div data-toggle="modal"  data-target="#editImage" id = "imageEdit">
          <div class="camera-icon">
          	<i class="fas fa-image"></i>
          </div>

        </div>
        <div class="caption card-body">
          <div class = "float-right">
            <div class = "form-group">
              <label> $ </label>
              <input class = "form-control" id = "price-edit" type= "number" name = "price" >
            </div>
          </div>
          <div class = "form-group">
            <input class = "form-control" id = "name-edit" type= "text" name = "name" placeholder="item name" >
          </div>
            <span class = "form-group">
              <input class = "form-control" id = "condition-edit" type= "text" name = "condition" placeholder="item condtion">
            </span>
            <div class = "form-group pt-3">
            <textarea class = "form-control" id = "text-edit" type= "text" name = "description" placeholder="description"></textarea>
          </div>
          <div class ="float-right">
          <button class = "btn btn-md btn-success">Submit</button>
          </div>
        </div>
        </div>
      </div>
      </div>
      </div>
      <div id="editImage" class="modal fade" role="dialog">
          <div class="modal-dialog">
              <!-- Modal content-->
              <div class="modal-content">
                  <div class="modal-header">
                    Edit Image
                  </div>
                  <div class="modal-body">
                    <div class="form-group">
                    <input type="file" id="image" name="image" accept="image/*">
                  </div>
                  </div>
                  <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
              </div>
          </div>
      </div>
  </form>


  <%- include("../partials/footer") %>
