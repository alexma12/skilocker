<%- include("../partials/header") %>

<div class = "container mt-4">
  <div class = "row">
    <div class = "col-md-3">
      <div class = "lead">
        <form action="/<%= item._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      </div>
      <li class = "list-group-item">
        <label>Contact Name</label>
        <input class = "form-control" type ="tel" name = "item[contactName]" value = "<%=item.contactName%>">
      </li>
      <li class = "list-group-item">
        <label>Contact Number</label>
        <input class = "form-control" type ="text" name = "item[phone]" value = "<%=item.phone%>">
     </li>
      <li class = "list-group-item">
        <label>Location</label>
        <input class = "form-control" type ="text" name = "item[location]" value = "<%=item.location %>">
     </li>
    </div>
    <div class = "col-md-9">
      <div class = "card">
        <div data-toggle="modal"  data-target="#editImage" id = "imageEdit">
        <img src= "<%= item.image %>" class = "card-img-top img-responsive">
        </div>
        <div class="caption card-body">
          <div class = "float-right">
            <div class = "form-group">
              <label> $ </label>
              <input class = "form-control" id = "price-edit" type= "number" name = "item[price]" value = <%=item.price%>>
            </div>
          </div>
          <div class = "form-group">
            <input class = "form-control" id = "name-edit" type= "text" name = "item[name]" value = "<%= item.name %>" placeholder="item name" >
          </div>
            <span class = "form-group">
              <input class = "form-control" id = "condition-edit" type= "text" name = "item[condition]" value = "<%= item.condition %>" placeholder="condtion">
            </span>
            <div class = "form-group pt-3">
            <textarea class = "form-control" id = "text-edit" type= "text" name = "item[description]" placeholder="description"><%= item.description %></textarea>
          </div>

         <% if(item.isSold) { %>
           <div class = "float-left">
             <label class = "ml-2"> Selling </label>
             <input type = "radio"  name = "item[status]" value = "Selling">
             <label class = "ml-5"> Pending </label>
             <input type = "radio"  name = "item[status]" value = "Pending">
             <label class = "ml-5"> Sold </label>
            <input type = "radio"  name = "item[status]" value ="Sold" checked>
          </div>
         <% } else if(item.isPending) { %>
         <div class = "float-left">
           <label class = "ml-2"> Selling </label>
           <input type = "radio"  name = "item[status]" value = "Selling">
           <label class = "ml-5"> Pending </label>
           <input type = "radio"  name = "item[status]" value = "Pending" checked>
           <label class = "ml-5"> Sold </label>
          <input type = "radio"  name = "item[status]" value ="Sold">
        </div>
        <% } else { %>
          <div class = "float-left">
            <label class = "ml-2"> Selling </label>
            <input type = "radio"  name = "item[status]" value = "Selling" checked>
            <label class = "ml-5"> Pending </label>
            <input type = "radio"  name = "item[status]" value = "Pending">
            <label class = "ml-5"> Sold </label>
           <input type = "radio"  name = "item[status]" value ="Sold">
         </div>
        <% } %>
         <div class = "float-right">
          <button class = "btn btn-md btn-success">Save</button>
          </div>
          </div>
        </div>
          </div>
        </div>
      </div>

      <div id="editImage" class="modal fade" role="dialog">
          <div class="modal-dialog">
              <!-- Modal content-->
              <div class="modal-content">
                  <div class="modal-header">
                    Edit Image
                  </div>
                  <div class="modal-body">
                    <div class="form-group">
                    <input type="file" id="image" name="image" accept="image/*">
                  </div>
                  </div>
                  <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
              </div>
          </div>
      </div>
  </form>


  <%- include("../partials/footer") %>
